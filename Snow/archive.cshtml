@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Snow.ViewModels.ContentViewModel>
@using System.Collections.Generic
@{
  Layout = "default.cshtml";
}

<h1>Archives</h1>


@foreach(var year in Model.PostsGroupedByYearThenMonth)
{
  @foreach(var month in year.Value)
  {
    <h3 style="padding:10px 0;">@Model.GetMonth(@month.Key), @year.Key</h2>
   
    @foreach(var post in month.Value)
    {
      <div class="catboxed" style="position:relative; margin-bottom:20px;">
        <span class="cat-label"></span>
        <a href="@post.Url">@post.Title</a> <small>(@post.Date.ToString("MMMM dd, yyyy"))</small>
      </div>
      
    }
    
  }
}